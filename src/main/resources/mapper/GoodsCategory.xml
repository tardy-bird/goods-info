<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tardybird.goodsinfo.mapper.GoodsCategoryMapper">
    <!--<resultMap id="" type="">-->
        <!--<result property="" column=""/>-->

    <!--</resultMap>-->
    <select id="getAllCategories" resultType="com.tardybird.goodsinfo.domain.GoodsCategory">
        select * from goods_category
    </select>

    <select id="getLevelOneCategories" resultType="com.tardybird.goodsinfo.domain.GoodsCategory">
        select * from goods_category
        where pid is not null
    </select>

    <select id="getCategory" resultType="com.tardybird.goodsinfo.domain.GoodsCategory">
        select * from goods_category
        where id=#{id}
    </select>

    <select id="getLevelTwoByPid" resultType="com.tardybird.goodsinfo.domain.GoodsCategory">
        select * from goods_category
        where pid=#{pid}
    </select>

    <update id="updateCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        update goods_category
        <set>
            <if test="pid!=null">
                pid=#{pid}
            </if>
            <if test="name!=null">
                'name'=#{name}
            </if>

        </set>
    </update>

    <update id="deleteCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        update  goods_category
        set is_deleted=1
        where id=#{id}
    </update>

    <insert id="createCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        insert into goods_category(name, pid, gmt_create, gmt_modified, is_deleted)
        values (#{name},#{pid},current_timestamp ,current_timestamp,#{beDeleted})
    </insert>

</mapper>
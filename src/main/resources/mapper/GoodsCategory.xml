<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tardybird.goodsinfo.mapper.GoodsCategoryMapper">
    <resultMap id="GoodsCategory" type="com.tardybird.goodsinfo.domain.GoodsCategory">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pid" column="pid"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="beDeleted" column="is_deleted"/>
    </resultMap>

    <select id="getAllCategories" resultMap="GoodsCategory">
        select *
        from goods_category
        where is_deleted = 0
    </select>

    <select id="getLevelOneCategories" resultMap="GoodsCategory">
        select *
        from goods_category
        where pid is not null
          and is_deleted = 0
    </select>

    <select id="getCategory" resultMap="GoodsCategory">
        select *
        from goods_category
        where id = #{id}
          and is_deleted = 0
    </select>

    <select id="getLevelTwoByPid" resultMap="GoodsCategory">
        select *
        from goods_category
        where pid = #{pid}
          and is_deleted = 0
    </select>

    <select id="getGoodsCategoryName" parameterType="String" resultMap="GoodsCategory">
        select name
        from goods_category
        where id = #{id}
          and is_deleted = 0
    </select>

    <update id="updateCategory" parameterType="GoodsCategory">
        update goods_category

        <if test="pid != null">
            <set>
                pid=#{pid}
            </set>
        </if>
        <if test="name!=null">
            <set>
                name=#{name}
            </set>
        </if>

        where id=#{id} and is_deleted=0
    </update>

    <update id="deleteCategory" parameterType="GoodsCategory">
        update goods_category
        set is_deleted=1
        where id = #{id}
    </update>

    <insert id="createCategory" parameterType="GoodsCategory">
        insert into goods_category(name, pid, gmt_create, gmt_modified, is_deleted)
        values (#{name}, #{pid}, current_timestamp, current_timestamp, #{beDeleted})
    </insert>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tardybird.goodsinfo.mapper.GoodsCategoryMapper">
    <resultMap id="GoodsCategory" type="com.tardybird.goodsinfo.mapper.GoodsCategoryMapper">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pid" column="pid"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="beDeleted" column="is_deleted"/>
    </resultMap>
    <select id="getAllCategories" resultMap="GoodsCategory">
        select * from goods_category
    </select>

    <select id="getLevelOneCategories" resultMap="GoodsCategory">
        select * from goods_category
        where pid is not null
    </select>

    <select id="getCategory" resultMap="GoodsCategory">
        select * from goods_category
        where id=#{id}
    </select>

    <select id="getLevelTwoByPid" resultMap="GoodsCategory">
        select * from goods_category
        where pid=#{pid}
    </select>

    <select id="getGoodsCategoryName" parameterType="String" resultMap="GoodsCategory">
        select name from goods_category
        where id=#{id}
    </select>

    <update id="updateCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        update goods_category
        <set>
            <if test="pid!=null">
                pid=#{pid}
            </if>
            <if test="name!=null">
                'name'=#{name}
            </if>

        </set>
    </update>

    <update id="deleteCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        update  goods_category
        set is_deleted=1
        where id=#{id}
    </update>

    <insert id="createCategory" parameterType="com.tardybird.goodsinfo.domain.GoodsCategory">
        insert into goods_category(name, pid, gmt_create, gmt_modified, is_deleted)
        values (#{name},#{pid},current_timestamp ,current_timestamp,#{beDeleted})
    </insert>

</mapper>
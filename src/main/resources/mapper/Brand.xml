<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tardybird.goodsinfo.mapper.BrandMapper">
    <resultMap id="Brand" type="com.tardybird.goodsinfo.domain.Brand">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="describe" column="describe"/>
        <result property="picUrl" column="pic_url"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="beDeleted" column="is_deleted"/>
    </resultMap>

    <select id="getAllBrands" parameterType="java.lang.String" resultMap="Brand">
        SELECT * FROM brand
        <if test="sort!=null">
            ORDER BY ${sort}
            <if test="order!=null">
                ${order}
            </if>
        </if>
    </select>

    <select id="getBrandsByCondition" parameterType="java.lang.String" resultMap="Brand">
        SELECT * FROM brand
        WHERE id=#{id} OR name=#{name}
        ORDER BY
        <if test="sort!=null">
            ${sort}
            <if test="order!=null">
                ${order}
            </if>
        </if>
    </select>


    <select id="getBrandById" resultMap="Brand">
        select *
        from brand
        where id = #{id}
    </select>

    <insert id="addBrand" parameterType="com.tardybird.goodsinfo.domain.Brand" useGeneratedKeys="true" keyProperty="id">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into brand (name, description, pic_url, gmt_create, gmt_modified, is_deleted)
        values (#{name}, #{description}, #{picUrl}, now(), now(), #{beDeleted})
    </insert>

    <update id="updateBrand" parameterType="com.tardybird.goodsinfo.domain.Brand">
        update brand
        <trim prefix="set" prefixOverrides=",">
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="description!=null">
                description=#{description},
            </if>
            gmt_modified=now()
        </trim>
        where id = #{id}
    </update>

    <update id="deleteBrand">
        update brand
        set is_deleted = 1
        where id = #{id}
    </update>

</mapper>
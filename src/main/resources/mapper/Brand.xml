<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tardybird.goodsinfo.mapper.BrandMapper">
    <resultMap id="Brand" type="com.tardybird.goodsinfo.domain.Brand">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="describe" column="describe"/>
        <result property="picUrl" column="pic_url"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="beDeleted" column="is_deleted"/>
    </resultMap>

    <select id="getAllBrands" resultMap="Brand">
        select * from brand
    </select>

    <select id="getBrandsById" resultMap="Brand">
        select * from brand where id = #{id}
    </select>

    <insert id="addBrand" parameterType="com.tardybird.goodsinfo.domain.Brand" useGeneratedKeys="true" keyProperty="id">
        insert into brand (name, "describe", pic_url, gmt_create, gmt_modified,is_deleted)
        values (#{name},#{describe},#{picUrl},CURRENT_TIMESTAMP,CURRENT_TIMESTAMP,#{beDeleted})
    </insert>

    <update id="updateBrand" parameterType="com.tardybird.goodsinfo.domain.Brand">
        update brand
        <trim prefix="set" prefixOverrides=",">
            <if test="name!=null">
                'name'=#{name},
            </if>
            <if test="describe!=null">
                'describe'=#{describe},
            </if>
            gmt_modified=CURRENT_TIMESTAMP
        </trim>
        where id = #{id}
    </update>

    <update id="deleteBrand">
        update brand
        set is_deleted = 1
        where id = #{id}
    </update>

</mapper>